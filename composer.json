{
    "name": "kalimeromk/email-check",
    "description": "Standalone email validation application",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "illuminate/database": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Support/async_polyfill.php"
        ]
    },
    "scripts": {
        "validate": "php scripts/validate_emails.php",
        "test": "php scripts/test_validator.php",
        "json": "php scripts/validate_from_json.php",
        "query": "php scripts/show_query_info.php",
        "safe": "php scripts/validate_emails_safe.php",
        "quick": "php scripts/quick_validate.php",
        "export": "php scripts/export_emails.php"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "rector/rector": "^2.1",
        "phpstan/phpstan": "^2.1"
    }
}